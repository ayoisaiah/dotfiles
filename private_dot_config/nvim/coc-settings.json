{
  "diagnostic.warningSign": "‚ö°",
  "diagnostic.errorSign": "üêû",
  "diagnostic.hintSign": "üí°",
  "diagnostic.infoSign": "‚ö†Ô∏è",
  "diagnostic.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "Markdown",
    "go",
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "html"
  ],
  "prettier.singleQuote": true,
  "prettier.eslintIntegration": true,
  "prettier.stylelintIntegration": false,
  "prettier.disableSuccessMessage": true,
  "suggest.removeDuplicateItems": true,
  "go.enable": true,
  "go.goplsPath": "/home/ayo/go/bin/gopls",
  "go.gofumpt": true,
  "css.validate": false,
  "scss.validate": false,
  "stylelintplus.autoFixOnSave": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.messageDelay": 500,
  "diagnostic.refreshAfterSave": false,
  "diagnostic-languageserver.filetypes": {
    "javascript": "eslint"
  },
  "diagnostic-languageserver.linters": {
    "eslint": {
      "command": "./node_modules/.bin/eslint",
      "rootPatterns": [".git", "package.json"],
      "debounce": 100,
      "args": ["--stdin", "--stdin-filename", "%filepath", "--format", "json"],
      "sourceName": "eslint",
      "parseJson": {
        "errorsRoot": "[0].messages",
        "line": "line",
        "column": "column",
        "endLine": "endLine",
        "endColumn": "endColumn",
        "message": "${message} [${ruleId}]",
        "security": "severity"
      },
      "securities": {
        "2": "error",
        "1": "warning"
      }
    }
  },
  "languageserver": {
    "golangci-lint-languageserver": {
      "command": "golangci-lint-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "command": ["golangci-lint", "run", "--out-format", "json"]
      }
    }
  }
}
